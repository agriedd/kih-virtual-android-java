<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KIHVirtual" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="android:colorBackground">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_700</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.KIHVirtual.Fullscreen" parent="Theme.KIHVirtual">
        <item name="android:actionBarStyle">@style/Widget.Theme.KIHVirtual.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.KIHVirtual.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Style.KIHVirtual.Component" parent="Theme.KIHVirtual">
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="Style.KIHVirtual.Component.Secondary" parent="Theme.KIHVirtual">
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light</item>
        <item name="colorOnSecondary">@color/teal_700</item>
        <item name="tint">@color/teal_700</item>
        <item name="drawableTint">@color/teal_700</item>
    </style>
    <style name="Style.KIHVirtual.Component.Secondary.Error" parent="Theme.KIHVirtual">
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light</item>
        <item name="colorOnSecondary">@color/red_300</item>
        <item name="tint">@color/red_300</item>
        <item name="drawableTint">@color/red_300</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Disabled" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/blue_gray_200</item>
    </style>

    <style name="Style.KIHVirtual.Toolbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light</item>
        <item name="android:textColorTertiary">@color/light</item>
    </style>


</resources>