<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KIHVirtual" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#121212</item>
        <item name="android:navigationBarColor">#252525</item>
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/Style.KIHVirtual.Component.Cardview</item>
    </style>

    <style name="Style.KIHVirtual.Component.Cardview">
        <item name="cardBackgroundColor">@color/black_900</item>
    </style>

    <style name="ThemeOverlay.KIHVirtual.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="Style.KIHVirtual.Component" parent="Theme.KIHVirtual">
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="tint">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Disabled" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/blue_gray_500</item>
    </style>
</resources>