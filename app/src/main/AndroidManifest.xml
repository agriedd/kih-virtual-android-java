<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.komodoindotech.kihvirtual">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_poltekes"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_poltekes"
        android:supportsRtl="true"
        android:theme="@style/Theme.KIHVirtual">
        <activity
            android:name=".ui.DaftarDataActivity"
            android:screenOrientation="fullSensor" />
        <activity android:name=".ui.PrivasiPenggunaActivity"
            android:screenOrientation="fullSensor" />
        <activity android:name=".MengenaiAplikasiActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".KesimpulanActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ReviewPendaftaran"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".PendaftaranActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ArticleShowActivity"
            android:screenOrientation="fullSensor" />

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />

        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.KIHVirtual.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>