<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.komodoindotech.kihvirtual">

        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.CALL_PHONE" />

        <application
            android:allowBackup="true"
            android:icon="@drawable/logo_app"
            android:label="@string/app_name"
            android:roundIcon="@drawable/logo_app"
            android:supportsRtl="true"
            android:theme="@style/Theme.KIHVirtual">
                <activity
                    android:name=".ui.DaftarDataActivity"
                    android:screenOrientation="userPortrait" />
                <activity android:name=".ui.PrivasiPenggunaActivity"
                    android:screenOrientation="userPortrait" />
                <activity android:name=".MengenaiAplikasiActivity"
                    android:screenOrientation="userPortrait" />
                <activity
                    android:name=".KesimpulanActivity"
                    android:screenOrientation="userPortrait" />
                <activity
                    android:name=".ReviewPendaftaran"
                    android:screenOrientation="userPortrait" />
                <activity
                    android:name=".PendaftaranActivity"
                    android:screenOrientation="userPortrait" />
                <activity
                    android:name=".ArticleShowActivity"
                    android:screenOrientation="userPortrait" />

                <meta-data
                    android:name="firebase_performance_logcat_enabled"
                    android:value="true" />

                <activity
                    android:name=".SplashActivity"
                    android:configChanges="orientation|keyboardHidden|screenSize"
                    android:label="@string/app_name"
                    android:screenOrientation="userPortrait"
                    android:theme="@style/Theme.KIHVirtual.Fullscreen">
                        <intent-filter>
                                <action android:name="android.intent.action.MAIN" />

                                <category android:name="android.intent.category.LAUNCHER" />
                        </intent-filter>
                </activity>
                <activity
                    android:name=".MainActivity"
                    android:label="@string/app_name"
                    android:screenOrientation="userPortrait">
                        <intent-filter>
                                <action android:name="android.intent.action.MAIN" />
                        </intent-filter>
                </activity>
        </application>

</manifest>